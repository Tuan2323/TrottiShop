{% extends 'base.html.twig' %}

{% block title %}Trotti index{% endblock %}

{% block body %}
    <h1>Trotti index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Marque</th>
                <th>Quantite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trotti in trottis %}
            <tr>
                <td>{{ trotti.id }}</td>
                <td>{{ trotti.nom }}</td>
                <td>{{ trotti.prix }}</td>
                <td>{{ trotti.marque }}</td>
                <td>{{ trotti.quantite }}</td>
                <td>
                    <a href="{{ path('trotti_show', {'id': trotti.id}) }}">show</a>
                    <a href="{{ path('trotti_edit', {'id': trotti.id}) }}">edit</a>
